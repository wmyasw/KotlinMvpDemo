<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WidgetActivity">

    <com.wmy.kotlin.demo.widget.WatchBoard
        android:id="@+id/watchBoard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        app:wb_scale_short_color="@color/colorAccent"
        tools:ignore="MissingConstraints" />

    <com.wmy.kotlin.demo.widget.CompassView
        android:id="@+id/compassView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/watchBoard"
        app:wb_scale_short_color="@color/colorAccent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>